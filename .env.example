# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# Database Configuration
# ============================================
# Note: Code uses DB_NAME (not DB_DATABASE as mentioned in README)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nest_db

# Optional: Explicit database settings (overrides NODE_ENV defaults)
# DB_SYNCHRONIZE=true
# DB_LOGGING=true

# ============================================
# JWT Configuration
# ============================================
# Access token secret and expiration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=1h

# Refresh token secret and expiration
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-in-production
JWT_REFRESH_TOKEN_TTL=7d

# ============================================
# SMTP Configuration
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# Optional: SMTP connection pool settings
# SMTP_MAX_CONNECTIONS=5
# SMTP_MAX_MESSAGES=100
# SMTP_RATE_DELTA=1000
# SMTP_RATE_LIMIT=10

# Optional: SMTP TLS/Security settings
# SMTP_SECURE=false
# SMTP_IGNORE_TLS=false
# SMTP_REQUIRE_TLS=true

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_URL=http://localhost:4200

# ============================================
# Cloudinary Configuration
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: Cloudinary image settings
# CLOUDINARY_DEFAULT_FOLDER=profile-pictures
# CLOUDINARY_IMAGE_WIDTH=500
# CLOUDINARY_IMAGE_HEIGHT=500
# CLOUDINARY_IMAGE_QUALITY=auto:good

# ============================================
# CORS Configuration
# ============================================
# Optional: CORS settings (comma-separated for multiple origins)
# CORS_ORIGIN=http://localhost:4200,http://localhost:3000
# CORS_CREDENTIALS=true
# CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# ============================================
# Swagger Configuration
# ============================================
# Optional: Swagger documentation settings
# SWAGGER_SERVER_URL=http://localhost:3000
# SWAGGER_CONTACT_NAME=Your Name
# SWAGGER_CONTACT_URL=https://yourwebsite.com
# SWAGGER_CONTACT_EMAIL=contact@yourwebsite.com

# ============================================
# Token Expiration Times
# ============================================
# Optional: Token expiration settings (currently hard-coded)
# EMAIL_VERIFICATION_TOKEN_TTL_HOURS=24
# PASSWORD_RESET_TOKEN_TTL_HOURS=1
# PROFILE_CREATION_TOKEN_TTL_DAYS=7
# REFRESH_TOKEN_TTL_DAYS=7

# ============================================
# Throttler Configuration
# ============================================
# Optional: Rate limiting settings (currently hard-coded)
# THROTTLE_SHORT_TTL=1000
# THROTTLE_SHORT_LIMIT=3
# THROTTLE_MEDIUM_TTL=60000
# THROTTLE_MEDIUM_LIMIT=10
# THROTTLE_LONG_TTL=3600000
# THROTTLE_LONG_LIMIT=100